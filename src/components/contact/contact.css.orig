.contact-container {
    margin: 92px 0;
}

.input-container {
    display: flex;
    flex-direction: column;
    gap: 32px;
    width: 75%;
    margin-top: 12px;
}

input {
    height: 28px;
    padding: 8px;
    font-size: 16px;
}

input:last-child {
    height: 120px;
    padding: 2px 8px;
    margin: 0;
}
.contact-links-container {
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin-left: 14px;
}

.link-row {
    display: flex;
    gap: 22px;
    cursor: pointer;
}

.link-row > a {
    display: flex;
    align-items: center;
    gap: 12px;
}

.link-row > img {
    width: auto;
    height: 50px;
    margin: 6px 0;
}

.link-row:first-child {
    margin-top: 40px;
}

.title {
    display: flex;
    position: relative;
    z-index: 0;
    align-items: center;
    margin-bottom: 32px;
}

.title > h2 {
    margin:0 0 0 25px;
}

.dot {
    position: absolute;
    z-index: -1;
    display: flex;
    height: 70px;
    width: 70px;
    background: linear-gradient( #00BCDC, #05C54F );
    border-radius: 50%;
    margin-bottom: 8px;
  }


@media screen and (max-width: 414px) {
 
    .title {
        margin-top: 10px;
    }

    .contact-links-container {
    margin-left: 24px;
    gap: 24px;
}

.links {
    margin-top: 10px;
    gap: 46px;
}

.link-row > a {
    gap: 32px;
}

}